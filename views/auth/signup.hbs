<br>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <br>
            <h1>Sign Up</h1>
            <hr>
            <form action="/auth/signup" method="POST">
                <div class="mb-3 row">
                    <div class="col">
                        <label for="emailInput" class="form-label">Email</label>
                        <input type="email" class="form-control" id="emailInput" name="email">
                        <div class="form-text">Required.</div>
                    </div>
                    <div class="col">
                        <label for="pwdInput" class="form-label">Password</label>
                        <input type="password" class="form-control" id="pwdInput" name="userPwd">
                        <div class="form-text">Required.</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="usernameInput" class="form-label">Username</label>
                    <input type="text" class="form-control" id="usernameInput" name="username">
                </div>

                <div class="mb-3">
                    <p>Interest</p>
                    <select id="interest" name="interest">
                        <option value="Music">Music</option>
                        <option value="Gastronomy">Gastronomy</option>
                        <option value="Sports">Sports</option>
                        <option value="Social">Social</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="imageInput" class="form-label">Image</label>
                    <input type="url" class="form-control" id="imageInput" name="profileImg">
                    <div class="form-text">Enter the URL for your avatar picture.</div>
                </div>
                <div class="mb-3">
                    <h2>Address:</h2>
                    <label for="city" class="form-label">City:</label>
                    <input type="text" class="form-control" id="city" name="city"><br><br>

                    <label for="zipcode" class="form-label">Zip-code</label>
                    <input type="text" class="form-control" id="zipcode" name="zipcode"><br><br>
                </div>
                <div class="d-grid gap-2">
                    <button class="btn btn-dark block" >Submit</button>
                    <br>
                </div>
                {{#if errorMessage}}
                <div id="errorMessage">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}
            </form>
        </div>
    </div>
</div>
<br>