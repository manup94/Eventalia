<div class="container list mt-5">
    <br>
    <h1>Event List</h1>
    <hr>
    <div class="row">
        <h2>Our Events</h2>
        <hr>
        {{#each internalEvents}}
        <div class="col-md-4">
            <h3><a class="text-decoration-none text-black" href="/internalEvent/{{_id}}">{{title}}</a></h3>
            <article class="cards">
                <img src="{{eventImg}}" style="width: 50%" alt="">
            </article>
            <p>Start: {{start}}</p>
            <p>End: {{end}}</p>
            <div class="btn">
                <a href="/internalEvent/{{_id}}" class="btn btn-primary">More Information</a>
                <div class="btn"> </div>
            </div>
        </div>
        {{/each}}
    </div>
    <div class="row">
        <h2>Comunity Events</h2>
        <hr>
        {{#each externalEvents}}
        <div class="col-md-4">
            <h3><a class="text-decoration-none text-black" href="/externalEvent/{{id}}">{{title}}</a></h3>
            <article class="cards">
                <img src="{{eventImg}}" style="width: 50%" alt="">
            </article>
            <p>Start: {{start}}</p>
            <p>End: {{end}}</p>
            <div class="btn">
                <a href="/externalEvent/{{id}}" class="btn btn-dark">More Information</a>
                <div class="btn">Home</div>
            </div>
        </div>
        {{/each}}
    </div>