<div class="container mt-5">
    {{#each events}}
    <br>
    <h1>{{title}} </h1>
    <hr>
    <div class="row">
        <div class="col">
            <h3>Info:</h3>
            <ul>
                <br>
                <li><strong>Category:</strong> {{category}}</li>
                <br>
                <li><strong>Description:</strong> {{description}}</li>
                <br>
                <li><strong>Start:</strong> {{start}}</li>
                <br>
                <li><strong>End:</strong> {{end}}</li>
                <br>
                <li><strong>Country:</strong> {{country}}</li>
                <br>
                <li><strong>Assistants:</strong>
                    <br>
                    <img src="/images/Stacked.png" style="width: 20%" alt="">
                </li>
                <br>
                <div class="btn">
                    <a href="/{{id}}/add" class="btn btn-dark">Save Event ❤️</a>
                </div>
            </ul>
        </div>
        <hr>
        <br>
        <div class=" col">
            <h3>Map:</h3>
            <br>
            <figure id="map"></figure>
        </div>
    </div>
    <hr>
    <div class="btns">
        <div class="btn">
            <a href="/" class="btn btn-primary mt-3 mb-5">Home</a>
        </div>

    </div>
    {{/each}}
</div>