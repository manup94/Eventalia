<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Edit Event</h1>
            <hr>
            <form action="/event/:id/edit" method="POST">
                <div class="mb-3">
                    <label for="nameInput" class="form-label">Event Name</label>
                    <input type="text" class="form-control" id="nameInput" name="name" value={{name}}>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" class="form-control" id="location" name="role" value={{location}}>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <img src="INSERTAR IMAGEN">
                    <input type="text" class="form-control" id="image" name="role" value={{image}}>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Submit</button>
                </div>
                {{#if errorMessage}}
                <div id="errorMessage">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}
            </form>
        </div>
    </div>
</div>