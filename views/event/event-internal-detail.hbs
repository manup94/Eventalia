<div class="container mt-5">
    <br>
    <h1>{{title}} </h1>
    <hr>
    <div class="row">
        <div class="col-md-4">
            <img src="{{eventImg}}" style="width: 100%; margin-bottom: 10px;" alt="#">
        </div>
        <div class="col">
            <h3>Information:</h3>
            <ul>
                <br>
                <li><strong>Category:</strong> {{category}}</li>
                <br>
                <li><strong>Description:</strong> {{description}}</li>
                <br>
                <li><strong>Start:</strong> {{start}}</li>
                <br>
                <li><strong>End:</strong> {{end}}</li>
                <br>
                <li><strong>City:</strong> {{location.city}}</li>
                <br>
                <li><strong>Assistants:</strong>
                    <br>
                    <img src="/images/Stacked.png" style="width: 20%" alt="">
                </li>
                <br>
                <div class="btn">
                    <a href="/{{_id}}/add" class="btn btn-dark">Save Event ❤️</a>
                </div>
            </ul>
        </div>
        <hr>
        <br>
        <div class=" col">
            <div id="map"></div>
        </div>
    </div>
    <hr>
    <div class="btns">
        <div class="btn">
            <a href="/" class="btn btn-primary mt-3 mb-5">Home</a>
        </div>
        <div class="btn">
            <a href="/{{_id}}/edit" class="btn btn-warning mt-3 mb-5">Edit</a>
        </div>
        <form action="/{{_id}}/delete" method="POST" style="display: inline">
            <input type="submit" value="Delete" class="btn btn-danger mt-3 mb-5">
        </form>
    </div>
</div>

<script src="/js/eventsPoints.js"></script>
<script async
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCQ0r02Yba37PtZDZ55sV8s962Q1Hdtihw&callback=initViewMarkers">
    </script>