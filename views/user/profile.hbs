<div class="container mt-5">
    <br>
    <h1>User Profile </h1>
    <hr>
    <div class="row">
        <div class="col-md-4">
            <img src="{{avatar}}" style="width: 80%; margin-bottom: 10px; margin-left: 20px" alt="not found">
        </div>
        <div class="col">
            <h3>Informaci√≥n:</h3>
            <ul>
                <li> <strong>Username:</strong> {{username}} </li>
                <br>
                <li><strong>Email:</strong> {{email}}</li>
                <br>
                <li><strong>city:</strong> {{address.city}}</li>
                <br>
                <li><strong>zipcode:</strong> {{address.zipcode}}</li>
                <br>
                <li><strong>Interests:</strong> {{interests}}</li>
                <br>
                <li><strong>Role:</strong> {{role}}</li>
            </ul>
        </div>
        <hr>
        <div class="row md-4">
            <h3>Eventos Guardados</h3>
            <hr>
            {{#each events}}
            <div class="col-md-4">
                <h5><a class="text-decoration-none text-black" href="/internalEvent/{{_id}}">{{title}}</a></h5>
                <article class="cards">
                    <img src="{{eventImg}}" style="width: 50%" alt="">
                </article>
            </div>
            {{/each}}
            {{#each externalEvents}}
            <div class="col-md-4">
                <p>{{id}}</p>
                <h5><a class="text-decoration-none text-black" href="/event/{{id}}">{{title}}</a></h5>
                <article class="cards">
                    <img src="{{eventImg}}" style="width: 50%" alt="">
                </article>
            </div>
            {{/each}}
        </div>
        <div class="btns">
            <div class="btn">
                <a href="/" class="btn btn-primary mt-3 mb-5">Home</a>
            </div>
            <div class="btn">
                <a href="/user/{{_id}}/edit" class="btn btn-warning mt-3 mb-5">Edit</a>
            </div>
            <form action="/user/{{_id}}/delete" method="POST" style="display: inline">
                <input type="submit" value="Delete" class="btn btn-danger mt-3 mb-5">
            </form>
        </div>
    </div>